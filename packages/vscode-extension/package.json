{
  "name": "livelyicons-picker",
  "displayName": "LivelyIcons Picker",
  "description": "Browse, preview, and insert animated icons from the LivelyIcons library",
  "version": "1.0.0",
  "publisher": "livelyicons",
  "icon": "icon.png",
  "engines": { "vscode": "^1.74.0" },
  "categories": ["Snippets", "Other"],
  "keywords": ["icons", "animated", "motion", "react", "svg", "lively", "livelyicons"],
  "activationEvents": ["onView:livelyicons.iconPicker"],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [{
        "id": "livelyicons",
        "title": "LivelyIcons",
        "icon": "icon.svg"
      }]
    },
    "views": {
      "livelyicons": [{
        "type": "webview",
        "id": "livelyicons.iconPicker",
        "name": "Icon Picker"
      }]
    },
    "commands": [{
      "command": "livelyicons.insertIcon",
      "title": "LivelyIcons: Insert Selected Icon"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "build:webview": "cd webview && npm run build",
    "watch": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "extract-icons": "npx tsx scripts/extract-svg-data.ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.20.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
